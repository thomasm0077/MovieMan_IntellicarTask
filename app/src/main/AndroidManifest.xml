<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="intellicar.movieman">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/moviemanlogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/moviemanlogo"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieMan"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.activities.SplashScreen"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.activities.MovieDetails"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionAndStatusBar"/>

        <activity android:name=".ui.activities.MovieListActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>